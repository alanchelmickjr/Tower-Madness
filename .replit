# Replit configuration for Tower Madness
# One-click play from any browser!

run = "python main.py"
language = "python3"

[nix]
channel = "stable-24_05"

[deployment]
run = ["python", "main.py"]

[[ports]]
localPort = 5900
externalPort = 80

[env]
PYGAME_HIDE_SUPPORT_PROMPT = "1"
SDL_VIDEODRIVER = "dummy"
DISPLAY = ":0"

[packager]
language = "python3"

[packager.features]
packageSearch = true
guessImports = true
enabledForHosting = false

[[hints]]
regex = "pygame"
message = "Tower Madness is loading..."

[languages]

[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"